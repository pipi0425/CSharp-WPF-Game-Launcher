<Window x:Class="PZ_s_Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_s_Game_Launcher"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		ContentRendered="Window_ContentRendered"
        Title="PZ's Game Launcher" Height="540" Width="960"
		ResizeMode="CanMinimize">
	<Grid>
		<Image Stretch="UniformToFill"
			   Source="pack://application:,,,/img/bg.png"/>
		<TextBlock Name="VersionText"
				   Text="Version 0.0.0"
				   VerticalAlignment="Bottom"
				   HorizontalAlignment="Left"
				   FontSize="12"/>
		<Button Name="PlayButton"
				Click="PlayButton_Click"
				Content="Checking for updates..."
				FontSize="18"
				Width="800" Height="40"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Center"
				Margin="0 0 0 20"/>
		<TextBox Name="PatchNoteText"
				 IsReadOnly="True"
				 TextWrapping="Wrap"
				 Background="#80FFFFFF"
				 VerticalAlignment="Top"
				 HorizontalAlignment="Left"
				 Width="400" Height="400"
				 Margin="20 20 0 0"
				 FontSize="14">
			Patch Notes
		</TextBox>
	</Grid>
</Window>
